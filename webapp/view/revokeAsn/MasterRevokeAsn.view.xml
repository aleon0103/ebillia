<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic" controllerName="ns.EBilliaApp.controller.revokeAsn.MasterRevokeAsn">
	<semantic:SemanticPage id="page">
		<semantic:titleHeading>
			<Title id="masterHeaderTitle" text="{      parts: [       'i18n>ASNCountRA',       'asnModel&gt;/Count'      ],      formatter: 'jQuery.sap.formatMessage'    }"/>
		</semantic:titleHeading>
		<semantic:content>
			<!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
			<List id="list" width="auto" class="sapFDynamicPageAlignContent" 
            items="{      
                path: 'asnModel>/ASN',      
                parameters: {expand: 'Customer'},      
                sorter: {       path: 'idOrdenCompra',       
                descending: true      },      
                groupHeaderFactory: '.createGroupHeader'    
                 }" noDataText="{masterView>/noDataText}" 
                mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}" 
                growing="true" 
                growingScrollToLoad="true" 
                updateFinished=".onUpdateFinished" 
                selectionChange=".onSelectionChange" 
                busy="{asnModel>/busy}">
				
				<headerToolbar>


                    <Toolbar width="100%" id="toolbar1" height="100px">

                        <content>

                            <sap.ui.layout:VerticalLayout xmlns:sap.ui.layout="sap.ui.layout" width="100%" id="layout3">

                                <sap.ui.layout:content>

                                    <ComboBox type="Text" width="100%" id="proveedorCA" placeholder="Proveedor" 
                                    items="{    
                                            path: 'proveedores>/sapProveedor',                                                                              
                                            template: {                                                                                  
                                            Type: 'sap.ui.core.ListItem',                                                                                  
                                            text: '{proveedores&gt;name1}',                                                                                  
                                            key: '{proveedores>lifnr}'                                                                                  
                                        }                                                                    
                                    }" change="handleChangeProv" selectionChange="providerSelected" showValueStateMessage="false"> 
                                    </ComboBox>

                                   <SearchField id="searchFieldAsn" showRefreshButton="true" tooltip="{i18n>masterSearchTooltip}" width="100%" search=".onSearch">
                                        <layoutData>
                                            <OverflowToolbarLayoutData minWidth="150px" maxWidth="240px" shrinkable="true" priority="NeverOverflow"/>
                                        </layoutData>
                                    </SearchField>

                                </sap.ui.layout:content>

                            </sap.ui.layout:VerticalLayout>

                        </content>

                    </Toolbar>

				</headerToolbar>
				<items>
					<ObjectListItem 
                    type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}" 
                    press=".onSelectionChange" 
                    title="{                                 
                        parts: [                                       
                        'asnModel>noAsn'                                
                         ],                                 
                         formatter: 'jQuery.sap.formatMessage'                              
                           }"
                    >
							<firstStatus>
                                <ObjectStatus text="{asnModel>estatus}" state="{                                                                              path: 'asnModel>estatus',                                                                              formatter: '.formatter.POEMState'                                                                         }"/>
			                </firstStatus>
                         
					<attributes>
                         
					    <ObjectAttribute text="{asnModel>fecha_creacion}" id="attribute4"/>
                         
					</attributes>
                         
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>