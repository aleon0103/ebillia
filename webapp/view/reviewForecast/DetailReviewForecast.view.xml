<mvc:View xmlns="sap.m" xmlns:semantic="sap.f.semantic" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" controllerName="ns.EBilliaApp.controller.reviewForecast.DetailReviewForecast">
	<semantic:SemanticPage id="page" busy="{busyPage>/busy}">
		<semantic:titleHeading>
			<Title text="{i18n>ProveedorRevP} {pronosticoDetailView>/Pronostico}"/>
		</semantic:titleHeading>
        	<semantic:headerContent>
			<l:HorizontalLayout>
				<l:VerticalLayout>
					<ObjectIdentifier text="{i18n>SemanasRevP} {pronosticoDetailView>/PronosticoDetalle/0/descripcion}"/>
				</l:VerticalLayout>
			</l:HorizontalLayout>
		</semantic:headerContent>
		<semantic:content>
			<l:VerticalLayout>
			
				<Table id="lineItemsList" class="sapUiSmallMarginTop" width="auto" items="{pronosticoDetailView>/PronosticoDetalle}" updateFinished=".onListUpdateFinished" noDataText="{i18n>noDataTableREP}" busyIndicatorDelay="{detailView>/lineItemTableDelay}">
					<!-- <headerToolbar>
						<Toolbar id="lineItemsToolbar">
							<Title id="lineItemsHeader" text="{detailView>/lineItemListTitle}"/>
						</Toolbar>
					</headerToolbar> -->
					<columns>
						<Column >
							<Text text=""/>
						</Column>
						
                        <Column   hAlign="End">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>

                                <l:VerticalLayout>
                                    <Label text="{pronosticoDetailView>fecha_modificacion}"/>
                                    
                                    <ObjectStatus
                                        state="{
                                            path: 'pronosticoDetailView>estatus',                                                                              
                                            formatter: '.formatter.ForecastItemState'                                                                         
                                        }" text="{pronosticoDetailView>estatus}" class="sapUiTinyMarginTopBottom"/> 
                                </l:VerticalLayout>

                                <Button icon="sap-icon://download" type="Transparent"  press="downloadFile()">
                                    
                                </Button>
                                
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</l:VerticalLayout>
		</semantic:content>
		
	<semantic:headerContent>
	    <l:VerticalLayout width="100%" id="layout4">
	    </l:VerticalLayout>
	</semantic:headerContent>
	</semantic:SemanticPage>
</mvc:View>