<mvc:View
	controllerName="ns.EBilliaApp.controller.searchASN.MasterASN"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">
	<semantic:SemanticPage id="page">
		<semantic:titleHeading>
			<Title
				id="masterHeaderTitle"
			 	text="{
					parts: [
						'i18n>titleASN',
						'asnModel>/Count'
					],
					formatter: 'jQuery.sap.formatMessage'
			}"/>
		</semantic:titleHeading>
		<semantic:content>
			<!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
			<List
				id="list"
				width="auto"
				class="sapFDynamicPageAlignContent"
				items="{
					path: 'asnModel>/listado',
					parameters: {expand: 'Customer'},
					
					groupHeaderFactory: '.createGroupHeader'
				}"
				noDataText="{masterView>/noDataText}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished"
				selectionChange=".onSelectionChange"
                busy="{asnModel>/busy}"
                >
			
				<headerToolbar>

					<OverflowToolbar>
						<SearchField
							id="searchField"
							showRefreshButton="true"
							tooltip="{i18n>search}"
							width="100%"
							search=".onSearch">
							<layoutData>
								<OverflowToolbarLayoutData
									minWidth="150px"
									maxWidth="240px"
									shrinkable="true"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
						
					</OverflowToolbar>
				</headerToolbar>
				<items>
					<ObjectListItem
						type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}"
						press=".onSelectionChange"
						title="{
                            parts: [
                                'i18n>noASN',
                                'asnModel>noAsn'
                            ],
                            formatter: 'jQuery.sap.formatMessage'
                        }"
                           
                        >
						<firstStatus>
                            <ObjectStatus
                                text="{asnModel>estatus}"
                                state="{
                                    path: 'asnModel>estatus',
                                    formatter: '.formatter.POEMState'
                                }" />
                        </firstStatus>
						<attributes>
							<ObjectAttribute id="companyName" text="{asnModel>fecha_creacion}" />

						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>