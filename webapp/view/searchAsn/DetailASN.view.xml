<mvc:View
	controllerName="ns.EBilliaApp.controller.searchASN.DetailASN"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	<semantic:SemanticPage
		id="page"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">
		<semantic:titleHeading>
			<Title
				text="{
					parts: [
						'i18n>noASN',
						'ASNdetailView>/asn'
					],
					formatter: 'jQuery.sap.formatMessage'
				}"/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<l:HorizontalLayout>
		
				<l:VerticalLayout>
					<Label text="{i18n>DescargarPDF}"/>
					<OverflowToolbarButton type="Transparent" visible="{ASNdetailView>/download}"  press="downloadPDF" icon="sap-icon://download" />
                    <Label text="{i18n>DescargarPDF}"/>
					<OverflowToolbarButton type="Transparent"  press="{ASNdetailView>/download}" icon="sap-icon://download" />

				</l:VerticalLayout>
			</l:HorizontalLayout>
		</semantic:headerContent>
		<semantic:content>
			<l:VerticalLayout>
				
				<Table
					id="lineItemsList"
					class="sapUiSmallMarginTop"
					width="auto"
					items="{ASNdetailView>/ASN/ldetalle}"
					updateFinished=".onListUpdateFinished"
					noDataText="{i18n>noDATA}"
					busyIndicatorDelay="{detailView>/lineItemTableDelay}">
					<headerToolbar>
						<Toolbar id="lineItemsToolbar">
							<Title
								id="lineItemsHeader"
								text="{detailView>/lineItemListTitle}"/>
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="{i18n>CDASN1}"/>
						</Column>
						<Column>
							<Text text="{i18n>CDASN2}"/>
						</Column>
						<Column>
							<Text text="{i18n>CDASN3}"/>
						</Column>
                        <Column
							minScreenWidth="Tablet"
							demandPopin="true">
							<Text text="{i18n>CDASN4}"/>
						</Column>
                         <Column
							minScreenWidth="Tablet"
							demandPopin="true">
							<Text text="{i18n>CDASN5}"/>
						</Column>
						<Column
							minScreenWidth="Tablet"
							demandPopin="true"
							hAlign="End">
							<Text text="{i18n>CDASN6}"/>
						</Column>
						<Column
							minScreenWidth="Tablet"
							demandPopin="true"
							hAlign="End">
							<Text text="{i18n>CDASN7}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier
			
									text="{ASNdetailView>noAsn}"/>

                                    <ObjectIdentifier
			
									text="{ASNdetailView>posicion}"/>

                                <ObjectIdentifier text="{ASNdetailView>material}"/>
                                <ObjectIdentifier text="{ASNdetailView>descripcion}"/>	
                                <ObjectIdentifier text="{ASNdetailView>vam}"/>
                                <ObjectIdentifier text="{ASNdetailView>fecha_entrega}"/>
                                <ObjectIdentifier text="{ASNdetailView>cantidadRecibida}"/>
                                    	
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</l:VerticalLayout>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction
				id="shareEmail"
				press=".onSendEmailPress"/>
		</semantic:sendEmailAction>
		<semantic:closeAction>
			<semantic:CloseAction
				id="closeColumn"
				press=".onCloseDetailPress"/>
		</semantic:closeAction>
		<semantic:fullScreenAction>
			<semantic:FullScreenAction
				id="enterFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
				press="toggleFullScreen"/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
				id="exitFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
				press="toggleFullScreen"/>
		</semantic:exitFullScreenAction>
	</semantic:SemanticPage>
</mvc:View>