<mvc:View
	controllerName="ns.EBilliaApp.controller.reports.PendingComplement" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
	xmlns="sap.m">
    <Page
        title="{i18n>titleReporteComplementos}" 
    >
    <l:VerticalLayout width="100%">
		<fb:FilterBar id="filterBarREP" reset="onReset" search="searchComplementos" showRestoreButton="false" showGoOnFB="true" showClearButton="true" showFilterConfiguration="false" useToolbar="false">
			<fb:filterGroupItems>
                <fb:FilterGroupItem groupName="__$INTERNAL$" name="REPProveedor" id="selectProveedores" label="{i18n>proveedorTableREP}"  partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
                            
                        	<ComboBox
                                visible="{complementos>/data/showProveedores}"
                                change="onSearch"
                                value="{complementos>/data/filtros/proveedor}"
                                items="{
                                    path: 'complementos>/data/proveedores',
                                    sorter: { path: 'lifnr' }
                                }">
                                <core:Item key="{complementos>lifnr}" text="{complementos>lifnr} - {complementos>name1}" />
                            </ComboBox>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="REPFechaInicio" label="{i18n>dateRange}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						 <DateRangeSelection
                        id="DRS2"
                        width="40%"
                        change="handleChange"/>
					</fb:control>
				</fb:FilterGroupItem>

              
                

              
        
                
			</fb:filterGroupItems>				
					
	    </fb:FilterBar>		
	    </l:VerticalLayout>
	<Table id="idProductsTable"
		inset="false"
		items="{complementos>/data/listado}">
	
		<infoToolbar>
			<OverflowToolbar>
				<Label text="{i18n>noComplementos}: {complementos>/data/cantidad}"/>
                <ToolbarSpacer></ToolbarSpacer>
                
                    <Button
							icon="sap-icon://search"
							tooltip="{i18n>search}"
							press="searchComplementos"/>
                <Button	icon="sap-icon://download" visible="{complementos>/data/download}" press="onDataExport" />
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="{i18n>column1}" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="{i18n>column2}" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="{i18n>column3}" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="{i18n>column4}" />
			</Column>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="{i18n>column5}" />
			</Column>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="{i18n>column6}" />
			</Column>
			<Column
				hAlign="End">
				<Text text="{i18n>column7}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					
                    <Text
						text="{complementos>proveedor}" />
					<Text
						text="{complementos>numDocPago}" />
					<Text
						text="{complementos>sociedad}" />
                 
                    <ObjectNumber
                        number="{
                            parts:[{path:'complementos>iva'},{path:'complementos>moneda'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {showMeasure: false}
                        }"
                        unit="{complementos>moneda}" />
                   
                    <ObjectNumber
                        number="{
                            parts:[{path:'complementos>importe'},{path:'complementos>moneda'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {showMeasure: false}
                        }"
                        unit="{complementos>moneda}" />
                    <Text
						text="{complementos>referencia}" />
                    <Text
						text="{complementos>fechaPago}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
    </Page>
</mvc:View>