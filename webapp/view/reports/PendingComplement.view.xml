<mvc:View
	controllerName="ns.EBilliaApp.controller.reports.PendingComplement" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Table id="idProductsTable"
		inset="false"
		items="{complementos>/data/listado}">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="{i18n>titleReporteComplementos}" level="H2"/>
					<ToolbarSpacer></ToolbarSpacer>
                    		<Button
			text="Show Select Dialog"
			press=".onSelectDialogPress"
			class="sapUiSmallMarginBottom" />
				    <Button	icon="sap-icon://download" visible="{complementos>/data/cantidad>0}" press="onDataExport" />
					
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar>
				<Label text="{i18n>noComplementos}: {complementos>/data/cantidad}"/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="{i18n>column1}" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="{i18n>column2}" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="{i18n>column3}" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="{i18n>column4}" />
			</Column>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="{i18n>column5}" />
			</Column>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="{i18n>column6}" />
			</Column>
			<Column
				hAlign="End">
				<Text text="{i18n>column7}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					
                    <Text
						text="{complementos>proveedor}" />
					<Text
						text="{complementos>numDocPago}" />
					<Text
						text="{complementos>sociedad}" />
                 
                    <ObjectNumber
                        number="{
                            parts:[{path:'complementos>iva'},{path:'complementos>moneda'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {showMeasure: false}
                        }"
                        unit="{complementos>moneda}" />
                   
                    <ObjectNumber
                        number="{
                            parts:[{path:'complementos>importe'},{path:'complementos>moneda'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {showMeasure: false}
                        }"
                        unit="{complementos>moneda}" />
                    <Text
						text="{complementos>referencia}" />
                    <Text
						text="{complementos>fechaPago}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>