<mvc:View
	controllerName="ns.EBilliaApp.controller.complementUpload.MasterUpload"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">
	<semantic:SemanticPage id="page">
		<semantic:titleHeading>
			<Title
				id="masterHeaderTitle"
			 	text="{
					parts: [
						'i18n>masterTitleComplementos',
						'purchaseOrderModel>/Count'
					],
					formatter: 'jQuery.sap.formatMessage'
			}"/>
		</semantic:titleHeading>
		<semantic:content>
			<List
				id="list"
				width="auto"
				class="sapFDynamicPageAlignContent"
				items="{
					path: 'purchaseOrderModel>/PurchaseOrders',
					parameters: {expand: 'Customer'},
					sorter: {
						path: 'idOrdenCompra',
						descending: true
					},
					groupHeaderFactory: '.createGroupHeader'
				}"
				noDataText="{masterView>/noDataText}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished"
				selectionChange=".onSelectionChange"
                busy="{purchaseOrderModel>/busy}"
                >
				<headerToolbar>

					<OverflowToolbar>
						<SearchField
							id="searchField"
							showRefreshButton="true"
							tooltip="{i18n>masterSearchTooltip}"
							width="100%"
							search=".onSearch">
							<layoutData>
								<OverflowToolbarLayoutData
									minWidth="150px"
									maxWidth="240px"
									shrinkable="true"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
					</OverflowToolbar>
				</headerToolbar>
				<items>
					<ObjectListItem
						type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}"
						press=".onSelectionChange"
						title="{
							parts: [
								'i18n>commonItemTitle',
								'purchaseOrderModel>idOrdenCompra'
							],
							formatter: 'jQuery.sap.formatMessage'
						}"
							number="{
				parts:[{path:'purchaseOrderModel>totalOc'},{path:'purchaseOrderModel>moneda'}],
				type: 'sap.ui.model.type.Currency',
				formatOptions: {showMeasure: false}
			}"
            	numberUnit="{purchaseOrderModel>moneda}"
            >
							<firstStatus>
				<ObjectStatus
					text="{purchaseOrderModel>estatus}"
					state="{
						path: 'purchaseOrderModel>estatus',
						formatter: '.formatter.POEMState'
					}" />
			</firstStatus>
						<attributes>
							<ObjectAttribute id="companyName" text="{purchaseOrderModel>txt_breve}" />
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>