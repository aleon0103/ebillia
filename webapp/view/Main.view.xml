<mvc:View height="100%"
	controllerName="ns.EBilliaApp.controller.Main"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt">
	<tnt:ToolPage
		id="main"
		class="sapUiDemoToolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
					id="sideNavigationToggleButton"
					icon="sap-icon://menu2"
					type="Transparent"
					press=".onSideNavButtonPress"
					tooltip="{i18n>collpaseMenuButtonText}">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				
				<Title
					text="{i18n>appTitle}"
					level="H2"/>
                    <!--
	<Label text="{i18n>appTitle}" wrapping="false" design='Bold' />

                    -->
				<ToolbarSpacer/>
			
            <!--
            	<Button
					id="errorButton"
					icon="sap-icon://message-popup"
					visible="{= ${alerts>/alerts/errors}.length === 0 ? false : true }"
					type="Transparent"
					press=".onMessagePopoverPress"
					tooltip="{i18n>errorButtonTooltip}">
                    <customData>
						<BadgeCustomData
							key="badge"
							value="1"
							visible="true"/>
					</customData>
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
-->

				<Button
					id="notificationButton"
					icon="sap-icon://ui-notifications"
					visible="{= ${user>/rol/id} !== 1 ? true : false }"
					type="Transparent"
					press=".onNotificationPress"
					tooltip="{i18n>notificationButtonTooltip}">
                     <customData>
						<BadgeCustomData
							key="badge"
							value="{
                                parts:[
                            {path:'notifications>/Cotizaciones'},
                            {path:'notifications>/Pronosticos'}],
                            formatter: '.mergeNotifications'
                            }"
							visible="true"/>
					</customData>
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
				<Button
					id="userButton"
					text="{user>/nombre}"
					type="Transparent"
					press=".onUserNamePress">
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation
				expanded="true"
				selectedKey="{side>/selectedKey}">
				<tnt:NavigationList
					items="{
						path: 'side>/navigation',
						templateShareable: false
					}">
					<tnt:NavigationListItem
						text="{path: 'side>titleI18nKey', formatter: '.getBundleText'}"
						icon="{side>icon}"
						expanded="{side>expanded}"
						items="{
							path: 'side>items',
							templateShareable: false
						}"
						key="{side>key}"
						>
						<tnt:NavigationListItem
							text="{path: 'side>titleI18nKey', formatter: '.getBundleText'}"
							key="{side>key}"
                            icon="{side>icon}"
							href="#/{side>key}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList
						items="{
							path: 'side>/fixedNavigation',
							templateShareable: false
						}">
						<tnt:NavigationListItem
							text="{path: 'side>titleI18nKey', formatter: '.getBundleText'}"
							icon="{side>icon}"
							key="{side>key}"
							href="#/{side>key}">
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
        <NavContainer id="pageContainer"></NavContainer>
			
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
